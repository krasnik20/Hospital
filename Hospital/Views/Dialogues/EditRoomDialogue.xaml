<Window x:Class="Hospital.Views.Dialogues.AddRoomDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Views.Dialogues"
        mc:Ignorable="d"
        Title="EditRoomDialogue" Height="500" Width="500">
    <DockPanel LastChildFill="False" Margin="20">
        <StackPanel DockPanel.Dock="Top">
            <Label>Лечащий врач:</Label>
            <ComboBox/>
            <Label>Список пациентов:</Label>
            <DataGrid Margin="0,20,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Width="100">Сохранить</Button>
            <Button Margin="20,0,0,0" Width="100">Отмена</Button>
        </StackPanel>
    </DockPanel>
</Window>
