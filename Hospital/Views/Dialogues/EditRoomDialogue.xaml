<Window x:Class="Hospital.Views.Dialogues.EditRoomDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Views.Dialogues"
        mc:Ignorable="d"
        Title="EditRoomDialogue" SizeToContent="Height" Width="500" ResizeMode="CanMinimize">
    <StackPanel DockPanel.Dock="Top" Margin="20">
            <Label>Лечащий врач:</Label>
            <ComboBox/>
            <Label>Список пациентов:</Label>
            <DataGrid/>
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="20">
            <Button Width="100">Сохранить</Button>
            <Button Margin="20,0,0,0" Width="100">Отмена</Button>
        </StackPanel>
    </StackPanel>
    
</Window>
