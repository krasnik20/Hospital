<Window x:Class="Hospital.Views.Dialogues.AddServiceDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Views.Dialogues"
        mc:Ignorable="d"
        Title="AddServiceDialogue" Height="auto" Width="500">
    <DockPanel LastChildFill="False" Margin="20">
        <StackPanel DockPanel.Dock="Top">
            <Label>Наименование услуги:</Label>
            <TextBox/>
            <Label>Цена:</Label>
            <TextBox/>
            <Label>Показания:</Label>
            <DataGrid/>
            
        </StackPanel>
        <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" Margin="20">
            <ComboBox Margin="0,10,0,0"/>
            <Button Margin="0,10,0,0">Добавить</Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="20">
            <Button Width="100">Сохранить</Button>
            <Button Margin="20,0,0,0" Width="100">Отмена</Button>
        </StackPanel>
    </DockPanel>
   
</Window>
