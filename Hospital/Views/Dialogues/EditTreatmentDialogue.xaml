<Window x:Class="Hospital.Views.Dialogues.EditTreatmentDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.Views.Dialogues" xmlns:viewmodels="clr-namespace:Hospital.ViewModels"
        mc:Ignorable="d"
        Title="AddTreatmentDialogue" SizeToContent="Height" Width="500" ResizeMode="CanMinimize">
    <Window.DataContext>
        <viewmodels:EditTreatmentViewModel/>
    </Window.DataContext>
    
    <StackPanel Margin="20">
        <Label>Препарат:</Label>
        <ComboBox/>
        <Label>Продолжительность приёма:</Label>
        <TextBox Text="{Binding CurrentCureRecord.Duration}"/>
        <Label>Инструкция:</Label>
        <TextBox Text="{Binding CurrentCureRecord.Instructions}"/>
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="20">
            <Button Width="100">Сохранить</Button>
            <Button Margin="20,0,0,0" Width="100">Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>
