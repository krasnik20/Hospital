<Window x:Class="Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Hospital.Views"
        mc:Ignorable="d"
        Title="Больница" Height="450" Width="800">
    <TabControl HorizontalAlignment="Stretch">
        <TabItem Header="Пациенты">
            <views:PatientsTab/>
        </TabItem>
        <TabItem Header="Услуги">
            <views:CuresTab/>
        </TabItem>
        <TabItem Header="Палаты">
            <views:RoomsTab/>
        </TabItem>
        <TabItem Header="Болезни">
            <views:DiseasesTab/>
        </TabItem>
        <TabItem Header="Доктора">
            <views:DoctorsTab/>
        </TabItem>
    </TabControl>
</Window>
